div id = "answer_#{answer.id}"
  p = answer.body
  - if answer.best?
    h4 = 'This answer is the best!'

  .links
    p Links:
    ul
      - answer.links.each do |link|
        li = link_to link.name, link.url

  - if current_user&.author?(answer)
    table
      tr
        td = link_to 'Delete', question_answer_path(@question, answer), id: "delete-answer_#{answer.id}", \
             remote: true, method: :delete
        td = link_to 'Edit', '#', class: 'edit-answer-link', data: { answer_id: answer.id }
        - if current_user&.author?(@question) && !answer.best?
          td = link_to 'Best answer', best_question_answer_path(@question, answer), method: :patch, remote: true

  = form_with model: [@question, answer], class: 'hidden', html: { id: "edit-answer-#{answer.id}" } do |f|
    table
      tr
        td = f.label :body, 'Body_Edit'
        td = f.text_area :body
      tr
        td = render 'shared/attached_files', resource: answer
      tr
        td = f.label :files
        td = f.file_field :files, multiple: true, direct_upload: true
      tr
        td = f.submit 'Save'
  hr
